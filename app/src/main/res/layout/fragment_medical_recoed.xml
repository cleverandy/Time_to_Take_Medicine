<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.andychung.timetotakemedicine.MedicalRecoedFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="31dp"
            app:srcCompat="@drawable/ic_menu_camera" />

        <TextView
            android:id="@+id/textView_NameTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/imageButton"
            android:layout_below="@+id/imageButton"
            android:layout_marginStart="25dp"
            android:layout_marginTop="35dp"
            android:text="姓名："
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView_NameTitle"
            android:layout_alignBottom="@+id/textView_NameTitle"
            android:layout_alignEnd="@+id/imageButton"
            android:layout_marginEnd="14dp"
            android:text="乂關小羽乂"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView_AgeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView_NameTitle"
            android:layout_below="@+id/textView_NameTitle"
            android:layout_marginTop="10dp"
            android:text="年齡："
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView_Age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView_AgeTitle"
            android:layout_alignBottom="@+id/textView_AgeTitle"
            android:layout_alignStart="@+id/textView_Name"
            android:text="50"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView_BirthdayTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:text="出生日期："
            android:textSize="18sp"
            android:layout_below="@+id/textView_AgeTitle"
            android:layout_alignEnd="@+id/textView_AgeTitle" />

        <TextView
            android:id="@+id/textView_Birthday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView_BirthdayTitle"
            android:layout_alignBottom="@+id/textView_BirthdayTitle"
            android:layout_alignStart="@+id/textView_Age"
            android:text="1917/11/11"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView_AllergyTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView_BirthdayTitle"
            android:layout_below="@+id/textView_BirthdayTitle"
            android:layout_marginTop="12dp"
            android:text="過敏記錄："
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView_Allergy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView_AllergyTitle"
            android:layout_alignBottom="@+id/textView_AllergyTitle"
            android:layout_alignStart="@+id/textView_Birthday"
            android:text="無"
            android:textSize="18sp" />

    </RelativeLayout>

</FrameLayout>
